extends ../layout

block content
	h2 COWNUT SIGN IN PAGE 
	if errors
		.alert.alert-danger= errors[0]
	form(action="/auth",method="POST")
		.form-group
			label(for='exampleInputEmail1') Email address
			input#exampleInputEmail1.form-control(type='email',placeholder='Enter email',required,name="email")
			small#emailHelp.form-text.text-muted We&apos;ll never share your email with anyone else.
		.form-group
			label(for='exampleInputUserName') User Name
			input#exampleInputUserName.form-control(type='text', placeholder='Enter User Name',required,name="name")
		.form-group
			label(for='exampleInputEmail1') Password
			input#exampleInputPassword1.form-control(type='password', placeholder='Enter your password',required,name="password")
		button.btn.btn-primary(type='submit') Sign In



	