html(lang="en")
	head
		link(rel="stylesheet",href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
		meta(name="viewport",content="width=device-width, initial-scale=1, shrink-to-fit=no")
		link( rel="icon",href="/favicon-32x32.png",type="image/png")
	body
		nav(class="navbar navbar-expand-lg navbar-dark bg-secondary text-white")
			a(class="navbar-brand nav-item nav-link active",href="/") Manager Library
			button(class="navbar-toggler",type="button",data-toggle="collapse", data-target="#navbarNavAltMarkup",aria-controls="navbarNavAltMarkup" aria-expanded="false",aria-label="Toggle navigation")
				span(class="navbar-toggler-icon")
			div(class="collapse navbar-collapse" id="navbarText")
				ul.navbar-nav.mr-auto
					li.nav-item
						a(href="/trancation",class="nav-link text-white") Trancation
					li.nav-item
						a(href="/books",class="nav-link text-white") Books
					li.nav-item
						a(href="/users",class="nav-item nav-link text-white") Users
		
				if user
					span.navbar-text.text-white.text-capitalize= "Hello " + user.name
					img(src=srcImg,width="30",height="30",class="rounded-circle")
					a(href="/profile",class="nav-item nav-link text-white") Edit Your Profile
					a(href="/auth/signout",class="nav-item nav-link text-white") Logout
		div(class="container")
			block content  

		