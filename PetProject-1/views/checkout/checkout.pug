extends ../layout

block content
	h1.mb-3 Check Out Page
	
	table.table.text-center
		tr
			th.text-primary Name Book
			th.text-primary Quantity
			th.text-primary Delete 
	
		each book in books
			tr
				td=book.books
				td  
					a.btn.btn-secondary(href="#") &#60;
					span.mr-3.ml-3= book.quantity
					a.btn.btn-secondary(href="#") &#62;
				td 
					a.btn.btn-secondary(href="#") X

	a.btn.btn-primary.float-right(href="/checkout/rent") Rent Now!